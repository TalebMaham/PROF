{% extends 'base.html.twig' %}

{% block  body %}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
        
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    <label for="{{ form.nom.vars.id }}" class="label-control">{{ form.nom.vars.label }}Nom</label>
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="{{ form.prenom.vars.id }}" class="label-control">{{ form.prenom.vars.label }}Prenom</label>
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="{{ form.email.vars.id }}" class="label-control">{{ form.email.vars.label }}Email</label>
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'required': 'required', 'name': '_username'}}) }}

                </div>
                <div class="form-group">
                    <label for="{{ form.password.vars.id }}" class="label-control">{{ form.password.vars.label }}Mots de pass</label>
                    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'required': 'required', 'name': '_password'}}) }}

                </div>
                <button type="submit" class="btn btn-primary">Cr√©er</button>
                {{ form_end(form) }}
    
        </div>
    </div>
</div>
{% endblock %}
